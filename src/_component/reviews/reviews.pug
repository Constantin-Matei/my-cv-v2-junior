#reviews
- var sectionTitle = data.reviews.sectionTitle
include ../sectiunea-titlu/sectiunea-titlu
.column(span="row")
  .reviews-continut
    .laude-continut
        each laudatio in data.reviews.laudatio
          .laude
            .laude-data 
              .laude-date
                .laude-imagine 
                  img(class="imagine", src=`${laudatio.locatieImagine}`, alt="")
                .laude-nume=laudatio.nume
                .laude-dataReview=laudatio.dataReview
              .laude-descriere=laudatio.descriere 
.column(span="row")
  .button.buton__disc-verde
    i.icon__arrow-down
.column(span="row" height="10")
