- var sectionTitle = data.connect.sectionTitle
include ../section-title/section-title.pug

.column(span="row")
    .connect__avatar
.column(span="row" height="10")


each social, key in data.connect.socialList
    input.connect__radio(
        type="radio"
        name="connect__label"
        id=`connect__label--${key}`    
    )
    .column(span="1")
        label(for=`connect__label--${key}`).connect__disc
            i(class=`icon__${social.icon}`)

.column(span="row" height="10")
.column(span="row")
    .description-box__with-shadow
        .description-box__header
            .description-box__title
            .description-box__close
                input.connect__radio(
                    type="radio"
                    name="connect__label"
                    id=`connect__label--reset`
                )
                label(for=`connect__label--reset`).connect__disc
                    i(class=`icon__cross`)
        .description-box__body
            p.description-box__paragraph Lorem ipsum dolor sit, amet consectetur adipisicing elit. Quo, doloribus, laboriosam et eligendi incidunt aut corporis dicta enim explicabo, exercitationem iste adipisci esse necessitatibus quis placeat odio consectetur harum! Ipsam!
        .description-box__footer
            button.button__pill--blue
                i.icon__link
                span.button-text=data['about-me'].downloadButtonLabel

.column(span="row" height="10")
.column(span="row")
  button.button__disc--green
    i.icon__arrow-down
.column(span="row" height="10")

