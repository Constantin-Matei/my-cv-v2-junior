- var titluText = data.porumbei.titluText
include ../titlu/titlu.pug

each porumbel in data.porumbei.listaPorumbei
  .column(span="row")
    .pingeon__card
      .pingeon__image__wrapper
        img.pingeon__image(src=`asset/image/${porumbel.imagePorumbel}`)
      .pingeon__content
        h1=porumbel.numePorumbel
        each premiu in porumbel.palmares
          p=premiu

  .column(span="row" height="10")

.column(span="row")
  button.circle__button--green
      i.icon__arrow-up
.column(span="row" height="10")
